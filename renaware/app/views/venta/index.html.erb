<div class="right_col" role="main">
  <p id="notice"><%= notice %></p>
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Listado de Ventas</h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5   form-group pull-right">
          <div class="input-group">
            <div><a class="btn btn-primary" href="/principal/ventas/registrar">Nueva Venta</a></div>
          </div>
        </div>
      </div>
    </div>


    <table class="table table-striped projects">
      <thead>
        <tr>
          <th>Orden</th>
          <th>Monto</th>
          <th>Estado</th>
          <th>Cliente</th>
          <th>Producto</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @venta.each do |ventum| %>
        <tr>
          <td><%= ventum.orden %></td>
          <td><%= ventum.monto %></td>
          <td><%= ventum.status %></td>
          <td><%= ventum.cliente_id %></td>
          <td><%= ventum.product_id %></td>
<!--           <td><%= link_to 'Show', ventum %></td> -->
          <td><%= link_to 'Editar', edit_ventum_path(ventum) %></td>
          <td><%= link_to 'Eliminar', ventum, method: :delete, data: { confirm: 'Desea Eliminar?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>