
<div class="right_col" role="main">
  <p id="notice"><%= notice %></p>
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Clientes </h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5   form-group pull-right">
          <div class="input-group">
            <div><a class="btn btn-primary" href="/principal/clientes/registrar">Nuevo Cliente</a></div>
          </div>
        </div>
      </div>
    </div>

    <table class="table table-striped projects">
      <thead>
        <tr>
          <th>Name</th>
          <th>Dni</th>
          <th>Direccion</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @clientes.each do |cliente| %>
        <tr>
          <td><%= cliente.name %></td>
          <td><%= cliente.dni %></td>
          <td><%= cliente.direccion %></td>
          <td><%= cliente.email %></td>
          <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
          <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>

        <% end %>
      </tbody>
    </table>

    <br>

  </div>
</div>