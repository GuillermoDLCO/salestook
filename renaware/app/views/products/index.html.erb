<p id="notice"><%= notice %></p>
<div class="right_col" role="main">
    <div class="">
      <div class="page-title">
        <div class="title_left">
          <h3>Productos </h3>
        </div>

        <div class="title_right">
          <div class="col-md-5 col-sm-5   form-group pull-right top_search">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search for...">
              <span class="input-group-btn">
                <button class="btn btn-secondary" type="button">Go!</button>
              </span>
            </div>
          </div>
        </div>
      </div>
      <button type="button" class="btn btn-info btn-xs"><%= link_to 'New Product', new_product_path %></button>
      <table class="table table-striped projects">
        <thead>
          <tr>
            <th style="width: 20%">Product Name</th>
            <th></th>
            <th>Stock</th>
            <th>Status</th>
            <th style="width: 20%"></th>
          </tr>
        </thead>
  
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td>
        <%= product.name %>
      </td>
      <td>
        <ul class="list-inline">
          <li>
            
          </li>
          <li>
            
          </li>
          <li>
            
          </li>
          <li>
            
          </li>
        </ul>
      </td>
      <td class="project_progress">
        <div class="progress progress_sm">
          <div class="progress-bar bg-green" role="progressbar" data-transitiongoal="<%= product.stock %>"></div>
        </div>
        <%= product.stock %>
      </td>
      <td>
        <button type="button" class="btn btn-success btn-xs"><%= product.status %></button>
      </td>
      <td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </td>
    </tr>
    
    <% end %>
  </tbody>
</table>
</div>
</div>
